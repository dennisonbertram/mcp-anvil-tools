{
  "name": "mcp-anvil-tools",
  "version": "1.0.0",
  "description": "MCP server providing Anvil tools for Ethereum development and testing",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --external:@modelcontextprotocol/sdk --external:better-sqlite3 --external:express --external:cors --external:viem --external:dotenv --external:winston --external:zod --format=esm",
    "build:bundle": "node esbuild.bundle.config.js",
    "build:all": "npm run build && npm run build:bundle",
    "build:check": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --stdio",
    "start:bundle": "node dist/mcp-anvil-tools.bundle.mjs",
    "start:bundle:stdio": "node dist/mcp-anvil-tools.bundle.mjs --stdio",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "ethereum",
    "solidity",
    "anvil",
    "foundry",
    "testing",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.2",
    "better-sqlite3": "^9.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "viem": "^1.21.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
