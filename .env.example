# Server configuration
AUDIT_MCP_PORT=3000
AUDIT_MCP_HOST=0.0.0.0

# Database
AUDIT_MCP_DB_PATH=./audit-mcp.db

# Anvil configuration
ANVIL_PORT_START=8545
ANVIL_PORT_END=8555
ANVIL_DEFAULT_CHAIN_ID=31337

# Blockchain explorer API keys
ETHERSCAN_API_KEY=your_etherscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key

# RPC endpoints (Required for non-Anvil networks)
# Use your own RPC URLs - public endpoints are rate-limited
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY

# Logging
LOG_LEVEL=info
LOG_FILE=./audit-mcp.log

# Tools (optional)
SLITHER_PATH=/usr/local/bin/slither
SOLC_PATH=/usr/local/bin/solc
